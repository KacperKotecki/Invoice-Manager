@model Invoice_Manager.Models.ViewModels.ProductIndexViewModel

@{
    ViewBag.Title = "Lista produktów";
}

<style>

    .client-card {

        border-left: 5px solid #ccc;
        border-left-color: #007bff;
        border-radius: 8px;
        padding: 20px;
        height: 100%;
        transition: transform 0.2s, box-shadow 0.2s;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

        .client-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            border-color: #0d6efd; 
        }

        .client-card h5 {
            font-weight: bold;
            margin-bottom: 5px;
        }

    .client-info {
        font-size: 0.9em;
        color: white;
        margin-bottom: 5px;
    }

    .client-nip {
        font-weight: 600;
        color: #555;
        background-color: #f8f9fa;
        padding: 5px 6px;
        border-radius: 4px;
        display: inline-block;
        margin-bottom: 10px;
    }
</style>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <h2 class="text-light">@ViewBag.Title</h2>
        
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <div class="col-md-6">
            @using (Html.BeginForm("Index", "Product", FormMethod.Get, new { @class = "d-flex gap-2" }))
            {
                @Html.TextBoxFor(x => x.SearchQuery, new { @class = "form-control", placeholder = "Szukaj po nazwie, opisie..." })
                <button type="submit" class="btn btn-primary">Szukaj</button>
                if (!string.IsNullOrEmpty(Model.SearchQuery))
                {
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-secondary">Wyczyść</a>
                }
            }
        </div>
        <div>
            <a href="@Url.Action("Create", "Product")" class="btn btn-success">
                <i class="fa fa-plus"></i> Dodaj Produkt
            </a>

        </div>
        
    </div>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info text-center p-5 bg-body-secondary">
            <h4>Brak produktów do wyświetlenia</h4>
            <p>Nie znaleziono produktów spełniających kryteria lub Twoja baza jest pusta.</p>
            <a href="@Url.Action("Create", "Product")" class="btn btn-sm btn-success mt-2">Dodaj pierwszy produkt</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var product in Model.Products)
            {

                
                <div class="col">
                    <div class="client-card bg-body-secondary">
                        <div>
                            <h5>@product.Name</h5>

                            <div class="mt-3">
                                <p class="client-info">
                                    <strong>Opis:</strong><br />
                                    @product.Description<br />
                                    @product.UnitPriceNet.ToString() netto za @product.Unit
                                </p>
                               
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                            <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })" class="btn btn-primary btn-sm">
                                Edytuj
                            </a>

                            <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })" class="btn btn-danger btn-sm">
                                Usuń
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
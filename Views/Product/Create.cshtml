@model Invoice_Manager.Models.Domains.Product

@{
    ViewBag.Title = "Nowy Produkt";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">
                <i class="fa fa-cube"></i> Dodaj nowy produkt
            </h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                <div class="row">
                    <div class="col-md-7">
                        <h5 class="border-bottom pb-2 mb-3">Informacje o Produkcie</h5>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Name, "Nazwa Produktu / Usługi", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "np. Projektowanie strony WWW" } })
                            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, "Opis (opcjonalnie)", new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "3", placeholder = "Szczegółowy opis usługi..." })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-5">
                        <h5 class="border-bottom pb-2 mb-3">Cena i Podatki</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.UnitPriceNet, "Cena Netto", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.UnitPriceNet, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01", placeholder = "0.00" } })
                                @Html.ValidationMessageFor(m => m.UnitPriceNet, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6 mb-3">
                                @Html.LabelFor(m => m.Unit, "Jednostka", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.Unit, new { htmlAttributes = new { @class = "form-control", placeholder = "szt., godz., m2" } })
                                @Html.ValidationMessageFor(m => m.Unit, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.DefaultTaxRateId, "Stawka VAT", new { @class = "form-label fw-bold" })
                            @Html.DropDownListFor(m => m.DefaultTaxRateId, (SelectList)ViewBag.TaxRates, "--- Wybierz ---", new { @class = "form-select" })
                            @Html.ValidationMessageFor(m => m.DefaultTaxRateId, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <hr class="mt-4" />

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Anuluj
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-save"></i> Zapisz Produkt
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
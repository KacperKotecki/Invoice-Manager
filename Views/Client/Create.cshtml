@model Invoice_Manager.Models.Domains.Client

@{
    ViewBag.Title = "Nowy Klient";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fa fa-user-plus"></i> Dodaj nowego klienta</h4>
        </div>
        <div class="card-body">

            @using (Html.BeginForm("Create", "Client", FormMethod.Post, new { role = "form" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Dane Podstawowe</h5>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ClientName, "Nazwa Klienta / Imię i Nazwisko", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.ClientName, new { htmlAttributes = new { @class = "form-control", placeholder = "np. Firma XYZ sp. z o.o." } })
                            @Html.ValidationMessageFor(m => m.ClientName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.TaxId, "NIP (opcjonalnie)", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.TaxId, new { htmlAttributes = new { @class = "form-control", placeholder = "np. 123-456-78-90" } })
                            @Html.ValidationMessageFor(m => m.TaxId, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Email, "Adres Email (do faktur)", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Email, new { htmlAttributes = new { @class = "form-control", type = "email", placeholder = "biuro@klient.pl" } })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Adres</h5>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Street, "Ulica i numer", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Street, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger small" })
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(m => m.PostalCode, "Kod pocztowy", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.PostalCode, new { htmlAttributes = new { @class = "form-control", placeholder = "00-000" } })
                                @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger small" })
                            </div>
                            <div class="col-md-8 mb-3">
                                @Html.LabelFor(m => m.City, "Miasto", new { @class = "form-label fw-bold" })
                                @Html.EditorFor(m => m.City, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.Country, "Kraj", new { @class = "form-label fw-bold" })
                            @Html.EditorFor(m => m.Country, new { htmlAttributes = new { @class = "form-control", Value = "Polska" } })
                            @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger small" })
                        </div>
                    </div>
                </div>

                <hr class="mt-4" />

                <div class="d-flex justify-content-end gap-2">
                    <a href="@Url.Action("Index", "Client")" class="btn btn-secondary">
                        <i class="fa fa-arrow-left"></i> Anuluj
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fa fa-save"></i> Zapisz Klienta
                    </button>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
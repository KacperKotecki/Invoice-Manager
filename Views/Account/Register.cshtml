@using Invoice_Manager.Models
@model RegisterViewModel
@{
    ViewBag.Title = "Rejestracja";
}

<style>

    .login-card .form-label {
        display: block !important;
        margin-bottom: 8px !important;
        color: #e0e0e0 !important;
        font-weight: 600;
        position: relative;
        top: auto;
        left: auto;
    }


    .login-card .card-footer {
        background-color: #2c3034 !important;
        color: #b0b0b0 !important;
        border-top: 1px solid #444;
    }

    .login-card .input-group-text {
        background-color: #3a3f44;
        color: #fff;
        border-color: #444;
    }

    .login-card .form-control {
        background-color: #3a3f44;
        color: #fff;
        border-color: #444;
    }

        .login-card .form-control::placeholder {
            color: #888;
        }
</style>


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">

            <div class="card shadow-lg border-0 rounded-lg login-card" style="background-color: #2c3034; color: #fff;">

                <div class="card-header bg-primary text-white text-center p-4">
                    <h3 class="font-weight-light my-2">
                        <i class="fa fa-user-circle me-2"></i> Invoice Manager
                    </h3>
                    <small>Utwórz nowe konto i dołącz do nas</small> 
                </div>

                <div class="card-body p-5">
                    <section id="registerForm">
                        
                             @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger text-center" })

                            <div class="mb-3">
                                <label class="form-label">Adres Email</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "jankowalski@wp.pl" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Hasło</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "********" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Potwierdź hasło</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fa fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "********" })
                                </div>
                                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                            </div>

                            <div class="d-grid gap-2 mt-4">
                                <button type="submit" class="btn btn-primary ">
                                    Zarejestruj się <i class="fa fa-user-plus ms-1"></i>
                                </button>
                            </div>
                        }
                    </section>
                </div>

                <div class="card-footer text-center py-3">
                    <div class="small">
                        <span>Masz już konto?</span>
                        <a href="@Url.Action("Login", "Account")" class="fw-bold text-white text-decoration-underline ms-1">
                            Zaloguj się
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
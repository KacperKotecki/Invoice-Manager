@model Invoice_Manager.Models.ViewModels.PaymentModalViewModel

<div class="modal fade" id="dynamicPaymentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fa fa-money-bill-wave"></i> P쓰tno띾i: @Model.InvoiceNumber</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <!-- SEKCJA 1: FORMULARZ -->
                @using (Html.BeginForm("Add", "Payment", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.InvoiceId)

                    <div class="row">
                        <div class="col-6 mb-3">
                            <label class="form-label">Kwota (PLN)</label>
                            <input type="number" class="form-control" name="Amount" step="0.01"
                                   value="@Model.RemainingAmount" required />
                        </div>
                        <div class="col-6 mb-3">
                            <label class="form-label">Data wp쓰ty</label>
                            <input type="date" class="form-control" name="PaymentDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Metoda</label>
                        <select class="form-select" name="Method">
                            <option value="Przelew">Przelew</option>
                            <option value="Got雕ka">Got雕ka</option>
                            <option value="Karta">Karta</option>
                        </select>
                    </div>

                    if (Model.RemainingAmount > 0)
                    {
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Zapisz wp쓰t鼻/button>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-success text-center mb-0">
                            <i class="fa fa-check"></i> Faktura w pe쓽i op쓰cona
                        </div>
                    }
                }

                <hr />

                <!-- SEKCJA 2: PODSUMOWANIE -->
                <div class="card mb-3 bg-dark border-0">
                    <div class="card-body py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Warto럱 faktury:</span>
                            <span class="fw-bold">@Model.TotalGrossAmount.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center text-success">
                            <span>Wp쓰cono:</span>
                            <span class="fw-bold">@Model.TotalPaid.ToString("C")</span>
                        </div>
                        <hr class="my-1" />
                        <div class="d-flex justify-content-between align-items-center @(Model.IsFullyPaid ? "text-success" : "text-danger")">
                            <span class="fw-bold">Pozosta쓾 do zap쓰ty:</span>
                            <span class="fw-bold fs-5">@Model.RemainingAmount.ToString("C")</span>
                        </div>
                    </div>
                </div>

                <!-- SEKCJA 3: TABELA -->
                <h5>Historia wp쓰t:</h5>
                @if (Model.Payments.Any())
                {
                    <table class="table table-sm table-bordered table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>Data</th>
                                <th>Kwota</th>
                                <th>Metoda</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var payment in Model.Payments)
                            {
                                <tr>
                                    <td>@payment.PaymentDate.ToString("dd-MM-yyyy")</td>
                                    <td>@payment.Amount.ToString("C")</td>
                                    <td>@payment.Method</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-light text-center border">
                        <i class="fa fa-info-circle"></i> Brak zarejestrowanych wp쓰t.
                    </div>
                }

            </div>
        </div>
    </div>
</div>